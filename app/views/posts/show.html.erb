<div class="background-pattern">
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <div class="post-show some-margin-top some-margin-bottom">
          <h3 class="some-margin-bottom"><%= @post.title %> </h3>
          <p>By <%= @post.user.username if @post.user.username.present? %></p>
          <% if @post.content_html.present? %>
            <p>
              <%= @post.content_html.html_safe  %>
            <% else %>
             <p><%= @post.content_raw %></p>
             <br>
             <br>
             <em>Notice: Our hardworking gnomes are currently parsing this awesome post content. Please come back soon </em>ðŸ˜…
            <% end %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <p class="some-margin-bottom text-center" style="font-family: 'georgia';">Posted in<%= @post.created_at.strftime(" %B %d, %Y at %I:%M%p") %></p>
        <div class="action-buttons text-center some-margin-bottom">
        <button type="button" class="btn btn-outline-primary">
          <%= link_to 'Back to Posts', root_path %></button>
        <% if current_user&.admin? || user_signed_in? %>
          <% if policy(@post).edit? %>
            <button type="button" class="btn btn-outline-primary">
            <%= link_to 'Edit Post', edit_post_path %></button>
          <% end %>
          <% if policy(@post).destroy? %>
            <button type="button" class="btn btn-outline-danger"><%= link_to 'Delete Article', post_path(@post), method: 'delete', data: { confirm: "Are you sure?" } %> </button>
            </div>
            <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
