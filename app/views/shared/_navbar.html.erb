<div class="navbar--main">
  <!-- Logo -->
  <%= link_to root_path, class: "navbar--brand" do %>
    <%= image_tag "https://res.cloudinary.com/assortedpicnicants/image/upload/v1542700006/iconfinder_11_-_Harry_Potter_-_Outline_-_Quill_2730123.png", height: 50 %>
  <% end %>

  <!-- Right Navigation -->
  <div class="navbar--right hidden-xs hidden-sm">

    <% if user_signed_in? %>

      <!-- Links when logged in -->
      <% if policy(Post).new? %>
        <%= link_to ('<i class="fas fa-pencil-alt"></i> Create Post').html_safe, new_post_path, class: "navbar--item navbar--link" %>
      <% end %>

      <!-- Avatar with dropdown menu -->
      <div class="navbar--item">
        <div class="dropdown">
          <%= image_tag "https://res.cloudinary.com/assortedpicnicants/image/upload/v1542704250/iconfinder_user-check_3324924.png", class: "avatar dropdown-toggle", id: "navbar--menu", "data-toggle" => "dropdown" %>
          <ul class="dropdown-menu dropdown-menu-right navbar--dropdown-menu">
            <li>
              <%= link_to posts_path do %>
                <i class="fas fa-book-open"></i> <%= t(".profile", default: "My Posts") %>
              <% end %>
            </li>
            <li>
              <%= link_to edit_user_registration_path do %>
                <i class="fas fa-user-cog"></i>  <%= t(".settings", default: "Settings") %>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
              <% end %>
            </li>
          </ul>
        </div>
      </div>
    <% else %>
      <!-- Login link (when logged out) -->
      <%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "navbar--item navbar--link" %>
    <% end %>
  </div>
   <% if user_signed_in? %>
  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar--item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
        <ul class="dropdown-menu dropdown-menu-right navbar--dropdown-menu">
          <li>
            <% if policy(Post).new? %>
              <%= link_to ('<i class="fas fa-pencil-alt"></i> Create Post').html_safe, new_post_path, class: "navbar--item navbar--link" %>
            <% end %>
          </li>

          <li>
            <%= link_to posts_path do %>
              <i class="fas fa-book-open"></i> <%= t(".profile", default: "My Posts") %>
            <% end %>
          </li>

          <li>
            <%= link_to edit_user_registration_path do %>
              <i class="fas fa-user-cog"></i>  <%= t(".settings", default: "Settings") %>
            <% end %>
          </li>

          <li>
            <%= link_to destroy_user_session_path, method: :delete do %>
              <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
            <% end %>
          </li>
        </ul>
      </div>
    </div>
  <% else %>
      <!-- Login link (when logged out) -->
    <%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "navbar--item navbar--link hidden-md hidden-lg" %>
  <% end %>
</div>
